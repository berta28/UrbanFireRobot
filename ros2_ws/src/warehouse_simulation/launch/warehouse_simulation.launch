<?xml version="1.0"?>
<launch>

  <arg name="x" default="0.0"/>
  <arg name="y" default="0.0"/>
  <arg name="z" default="0.0"/>
  <arg name="yaw" default="0.0"/>

  <arg name="world" default="$(find warehouse_simulation)/worlds/warehouse_full.sdf" />
  <arg name="ign_args" default=""/>

  <!-- Launch Ignition Gazebo with the specified world in headless mode -->
  <include file="$(find ros_ign_gazebo)/launch/ign_gazebo.launch">
    <arg name="ign_args" value="-r -v 3 $(arg world)"/>
  </include>

  <node
    pkg="ros_ign_bridge"
    type="parameter_bridge"
    name="$(anon ros_ign_bridge_camera)"
    output="screen"
    args="/camera/image@sensor_msgs/Image@ignition.msgs.Image">
  </node>

  <node
    pkg="ros_ign_bridge"
    type="parameter_bridge"
    name="$(anon ros_ign_bridge_thermal_camera)"
    output="screen"
    args="/thermal_camera/image@sensor_msgs/Image@ignition.msgs.Image">
  </node>

  <!-- Add the thermal_image_listener node
  <node
    pkg="warehouse_simulation"
    type="thermal_image_listener.py"
    name="thermal_image_listener"
    output="screen">
  </node> -->

</launch>